<div class='container'>
  <h1 class='mt-5'>{{title}}</h1>
  <hr />
  <div class='mt-5 row justify-content-center'>
    <form id='loginForm'>
      <div class='mb-3 col-12'>
        <label for='user' class='form-label'>Input User Email</label>
        <input type='text' class='form-control' id='userEmailLogin' name='user' value='{{user}}' />
      </div>
      <div class='mb-3 col-12'>
        <label for='user' class='form-label'>Input User Password</label>
        <input type='text' class='form-control' id='userPasswordLogin' name='user' />
      </div>
      <button type='submit' class='btn btn-primary'>Login</button>
    </form>
    <hr class='mt-2' />
    <button class='btn btn-primary' onclick="location.href='/register'">Go to Register</button>
  </div>
</div>