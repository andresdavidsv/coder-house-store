extends layout

block content
  .container
    h1=namePage
      if(products.products.length > 0)
        table.table
          thead
            tr
              th(scope='col') #ID
              th(scope='col') Title
              th(scope='col') Price
              th(scope='col') Image
          tbody
          each product in products.products
            tr
              th(scope='row')= product.id
              td= product.title
              td= product.price
              td
                img(src=product.thumbnail alt='' border='3' height='100' width='100')
      else
        div(align='center') NO FOUND PRODUCT
  .container
    .d-grid.gap-2.col-6.mx-auto
      a.btn.btn-primary.btn-lg(href='/' tabindex='-1' role='button' aria-disabled='true') Go to Form